package let2;

dsl LetDSL {
  priority p0, p1 {
    p0 < p1
  }

  Name[p0] "a" () { return new Name('a'); }
  Name[p0] "b" () { return new Name('b'); }
  <R, name: Name> R[p1] "let" name "=" _ "in" _ (String v, Local<String, name> ~> R r) {
    return r.apply(new Local<String, name>(v));
  }
  context Local <V, name: Name> {
    Local (V v) {
      this.v = v;
    }
    V[p0] name[p0] () {
      return v;
    }
    private V v;
  }
}

class Name {
  public Name (char c) {
    this.c = c;
  }
  private char c;
}